



  <div class="title">
    <h1>Who Tweeted It?</h1>
  </div>

  <br>
  <% @users = User.default_twitter_accounts %>
  <% @user = @users.sample %>
  <% @user.name %>
  <br>

  <div class="tweet">
    <h2><%= @user.tweets.sample.text %></h2>
  </div>


  <%= form_tag("/home/index", method: "post") do |f| %>
    <div class="scoreboard">
      <span>
        <p class="label">Score</p>
        <input class="score" type="text" name="score" value="<%= @game.score %>" readonly>
      </span>

      <span>
        <p class="label">Attempts</p>
        <input class="score" type="text" name="attempts" value="<%= @game.attempts %>" readonly>
      </span>

      <span>
      <p class="label">Percentage</p>
        <input class="score" type="text" name="percentage" value="<%= @game.display_percentage %>" readonly>

      </span>

          <span>
          <p class="label">Feedback</p>
          <input class="score <%= @game.feedback_class_type %>" type="text"  value="<%= @game.feedback_value %>" readonly>
          </span>


    </div>
  </div>
  <div class = "wrapper">

  <br>
  <br>

  <div class="all_buttons">
    <% @users.all.each do |user| %>
    <div id="name_button" class="<%= user.slug %>">
      <input type="submit" class="myButton" name="name" value="<%= user.name %>">
      <div id="hidden" class ="<%= user.slug %>_img">
        <%=image_tag("#{user.slug}/#{user.select_random_image}", alt: "#{user.name}")%>
      </div>
    </div>
    <% end %>
  </div>
  <br>
  <input type="hidden" name="user_id" value="<%= @user.id %>">
<% end %>

  <div class="answer_status_box">

    <p class="answer_status"> <%= @game.display_after_answer %></p>
    <% if @game.start_over %>
      <%= link_to "#{@game.start_over}", home_index_path, class: "start_over" %>
    <% end %>



  </div>


</div>


<div class="big_space"></div>

<form action=<%= home_add_path %> method="post">
  <input name="_method" type="hidden" value="patch" />
  <br>
  <label for="username"> Enter a new Twitter handle</label>
  <input id="username" type="text" name="username" value="(ex: kingjames)">
  <input type="submit" value="Submit">
</form>

<%= form_for @user, :url => {:action => "remove", :controller => "users" }, :method => :patch do  %>
  <%= label_tag(:name, "Enter a name above to delete") %>
  <%= text_field_tag(:name, "(ex: Adam Moelis)") %>
  <%= submit_tag "Delete" %>
<% end %>


<% if current_account %>

  <%= link_to "Play Custom Game!", {controller: "home", action: "custom"}, method: :get %>

<% else %>

  <p>

  <a class="facebook-before" href="/auth/:provider/callback"><span class="fontawesome-facebook"></span></a>
  <button class="facebook">Login Using Facbook</button>

  </p>

  <p>

  <a class="twitter-before" href="/auth/twitter/"><span class="fontawesome-twitter"></span></a>
  <button class="twitter">Login Using Twitter</button>

  </p>
<% end %>
