<% if user.republican == true %>
    <%= form_tag("/home", method: "post") do %>
      <%= label_tag(:name, "Republican:") %> <br>
      <%= collection_select(:user, :name, User.where(republican: true), :name, :name, {:selected =>  "Donald J. Trump"}, {id: 'republican_select'}) %> <br>
      <%= submit_tag("Change Default") %>
    <% end %>

